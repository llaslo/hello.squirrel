<Window x:Class="HelloSquirrel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- animated gif in WPF: http://stackoverflow.com/questions/19694640/animating-gif-in-wpf -->
        <MediaElement x:Name="BusyIndicator" Width="16" Height="16"
            Visibility="Visible"
            MediaEnded="gif_MediaEnded" UnloadedBehavior="Manual"
            Source="Images/ajax-loader.gif" LoadedBehavior="Play" Stretch="None"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Check for Update" Click="UpdateOnClick" Height="24" Margin="4" Padding="4"/>
        </StackPanel>
    </Grid>
</Window>
