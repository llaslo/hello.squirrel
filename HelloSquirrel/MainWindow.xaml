<Window x:Class="HelloSquirrel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Content"/>
            <Image x:Name="BusyIndicator" gif:ImageBehavior.AnimatedSource="Images/ajax-loader.gif"
               Width="16" Height="16" Visibility="Hidden"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Check for Update" Click="UpdateOnClick" Height="24" Margin="4" Padding="4"/>
        </StackPanel>
    </Grid>
</Window>
